{
  "compilerOptions": {
    "outDir": "build/dist",
    "module": "CommonJS",
    "target": "es5",
    "lib": ["es6", "dom", "ESNext"],
    "strict": true,
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "rootDir": ".",
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "esModuleInterop": true,

    "allowSyntheticDefaultImports": true
  },

  "exclude": ["node_modules", "build", "scripts", "acceptance-tests", "webpack", "jest", "src/setupTests.ts"],
  "types": ["typePatches"]
}
